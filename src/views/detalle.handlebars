 <div class="text-center">
    <h1>Detalle de producto</h1>
  </div>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="row">
          <div class="col-md-6">
            <img src="{{producto.thumbnails}}" class="card-img" alt="Producto 1">
          </div>
          <div class="col-md-6">
            <div class="card-body">
              <h5 class="card-title">{{producto.title}}</h5>
              <p class="card-text">
                 <small class="text-muted">{{producto.descripcion}}</small><br>
                                   
              </p>
              <p class="card-text">{{producto.price}}</p>
              <label for="cantidad1">Cantidad:</label>
              <input type="number" id="cantidad1" class="form-control mb-2">
              <button class="btn btn-primary btn-block" id="agregarAlCarrito1">Agregar al Carrito</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>